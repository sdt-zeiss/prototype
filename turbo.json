{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "^db:generate"],
      "outputs": [".next/**", "!.next/cache/**"],
      "dotEnv": [".env.local", ".env"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^dev", "^db:generate"],
      "cache": false,
      "persistent": true,
      "dotEnv": [".env.local"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false,
      "dotEnv": [".env.local"]
    },
    "db:seed": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "start": {
      "dependsOn": ["^build", "^db:generate"]
    }
  },
  "globalEnv": ["DATABASE_URL", "AUTH_SECRET"]
}
